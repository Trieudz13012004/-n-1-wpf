<Window x:Class="DATK1.Views.DoiMatKhau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DATK1.Views"
        mc:Ignorable="d"
        Title="DoiMatKhau" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="383*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Đổi mật khẩu"
    FontSize="16" FontWeight="Bold" Foreground="DarkSlateGray"
    HorizontalAlignment="Center" Margin="0,0,0,20" Background="#FF1BC8E7" Grid.Column="1" Width="102"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên đăng nhập:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" Height="20" />
        <TextBox Grid.Row="1" Grid.Column="1" Name="usernameTextBox" Margin="0,0,0,10" Padding="5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Mật khẩu hiện tại:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" Height="20"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="old_passwordTextBox" Margin="0,0,0,10" Padding="5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Mật khẩu mới:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" Height="20"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="new_passwordTextBox" Margin="0,0,0,10" Padding="5"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" 
     HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Column="1" Width="220" Height="50">
            <Button Content="Xác nhận" FontSize="18" Width="100" Click="Changed_PasswordButton_Click" Background="Orange" Foreground="White" Margin="0,0,20,0"/>
            <Button Content="Hủy" FontSize="18" Width="100" Click="ExitButton2_Click" Background="Blue" Foreground="White"/>
        </StackPanel>

    </Grid>
</Window>

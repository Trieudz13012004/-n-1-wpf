<Window x:Class="DATK1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DATK1"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="400" Width="600">
    <Grid x:Name="windowstate" Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Đăng nhập"
            FontSize="20" FontWeight="Bold" Foreground="DarkSlateGray"
            HorizontalAlignment="Center" Margin="0,0,0,20" Background="#FF1BC8E7" Grid.Column="1" Width="102"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên đăng nhập:" VerticalAlignment="Center" Margin="0,0,10,0" Height="16" />
        <TextBox Grid.Row="1" Grid.Column="1" Name="usernameTextBox" Margin="0,0,0,10" Padding="5"/>
        
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Mật khẩu:" VerticalAlignment="Center" Margin="0,0,10,0" Height="16"/>
        <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
            <PasswordBox x:Name="passwordBox" Height="30" Padding="5"/>
          
            <TextBox x:Name="passwordTextBox" Height="30" Padding="5"  Visibility="Collapsed"/>
           </Grid>
        <!-- ComboBox for selecting user role -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Loại người dùng:" VerticalAlignment="Center" Margin="0,0,10,0" Height="16"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Name="userRoleComboBox" Height="30"
          SelectedIndex="0">
            <ComboBoxItem Content="Quản trị hệ thống" />
            <ComboBoxItem Content="Cán bộ quản lý Hàng hóa" />
            <ComboBoxItem Content="Nhân viên phụ trách Cơ sở chăn nuôi" />
            <ComboBoxItem Content="Nhân viên phụ trách Chế biến" />
            <ComboBoxItem Content="Nhân viên quản lý Hóa đơn" />
        </ComboBox>
        <StackPanel Grid.Row="4" Orientation="Horizontal" 
            HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Column="1" Width="210">
            <Button Content="Đăng nhập" Height="50" Width="100" Click="LoginButton_Click" Background="#4CAF50" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Thoát" Height="50" Width="100" Click="ExitButton1_Click" Background="IndianRed" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>

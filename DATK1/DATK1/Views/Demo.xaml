<Window x:Class="DATK1.Views.Demo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DATK1.Views"
        mc:Ignorable="d"
        Title="Demo" Height="400" Width="1000">
    <Grid>
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Margin" Value="5,0,5,0"/>
                    <!-- Khoảng cách giữa các tab -->
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Quản lý Tài khoản"/>
            <TabItem Header="Quản lý Hàng hóa"/>
            <TabItem Header="Quản lý Nhập kho"/>
            <TabItem Header="Quản lý Xuất kho"/>
            <TabItem Header="Quản lý Cơ sở chăn nuôi"/>
            <TabItem Header="Quản lý Chế biến"/>
            <TabItem Header="Quản lý Hóa đơn"/>
        </TabControl>


    </Grid>
</Window>
